@using Hawassa.ViewModels;
@model RegisterVM

@{
    ViewData["Title"] = "Register";
}

<div class="row d-flex align-items-stretch justify-content">

<div class="col-md-4 d-flex align-items-center justify-content-center h-100">
    <div class="card p-4 border-0" style="width: 100%; height: 100%; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
        <h3 class="text-center text-primary mb-4">Register</h3>
        <form asp-action="Register" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Name -->
            <div class="mb-3">
                <div class="form-floating">
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <label asp-for="Name">Name</label>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <div class="form-floating">
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                    <label asp-for="Email">Email</label>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <div class="form-floating">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    <label asp-for="Password">Password</label>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="mb-3">
                <div class="form-floating">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Address -->
            <div class="mb-3">
                <div class="form-floating">
                    <textarea asp-for="Address" class="form-control" rows="2" placeholder="Address"></textarea>
                    <label asp-for="Address">Address</label>
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between align-items-center">
                <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text-decoration-none">Already have an account?</a>
                <button type="submit" class="btn btn-primary btn-sm">Register</button>
            </div>
        </form>
    </div>
</div>

    <div class="col-md-8 d-flex ">
        <div class="card p-4 border-0" style="width: 100%; height: 100%; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
            <h2 class="  text-center" style="color: dodgerblue;">Welcome to Hawassa Gebeta</h2>
            <p class="text-muted">
                Hawassa Gebeta connects you to the best dining and hospitality experiences in Hawassa.
                We review and promote hotels, cafes, and restaurants, helping businesses grow while guiding locals and visitors to top spots.
                From hidden gems to popular destinations, we celebrate Hawassa’s vibrant food culture.
                Follow us for trusted reviews, events, and exclusive deals! <br/>
                <br/>
                Whether you're a foodie looking to explore local cuisine, a traveler seeking the best accommodations, or a business looking to showcase your services, Hawassa Gebeta is your go-to resource.
                We focus on quality, authenticity, and the rich diversity of Hawassa's hospitality scene.
                Our platform is designed to make your dining and lodging decisions easier, with honest reviews and insider recommendations.
                <br />
            </p>
            <div class="text-center mt-4">
                <h5>Follow us on Social Media</h5>
                <a href="https://facebook.com" target="_blank" class="text-decoration-none me-3">
                    <img src="~/Images/facebook.png" style="width: 50px; height: 50px;" />
                    <i class="fab fa-facebook fa-2x text-primary"></i>
                </a>

                <a href="https://instagram.com" target="_blank" class="text-decoration-none me-3">
                    <img src="~/Images/instagram.png" style="width: 50px; height: 50px;" />
                    <i class="fab fa-instagram fa-2x text-danger"></i>
                </a>   
                
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}