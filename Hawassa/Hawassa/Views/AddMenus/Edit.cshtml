@model Menuform
@{
}

<div class="row">
    <div class=" col-md-8 mx-auto rounded border p-3">
        <h2 class=" text-center mb-5">Edit Menu</h2>

        <form method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <lable class="col-sm-4 col-form-lable">Id</lable>
                <div class="col-sm-8">
                    <input class=" form-control" readonly value="@ViewData["AddMenuId"]">
                </div>
            </div>

            <div class="row mb-3">
                <lable class="col-sm-4 col-form-lable">Name</lable>
                <div class="col-sm-8">
                    <input class=" form-control" asp-for="Name">
                    <span asp-validation-for="Name" class=" text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <lable class="col-sm-4 col-form-lable">Location</lable>
                <div class="col-sm-8">
                    <input class=" form-control" asp-for="Location">
                    <span asp-validation-for="Location" class=" text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <lable class="col-sm-4 col-form-lable">Description</lable>
                <div class="col-sm-8">
                    <input class=" form-control" asp-for="Description">
                    <span asp-validation-for="Description" class=" text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <lable class="col-sm-4 col-form-lable">Price</lable>
                <div class="col-sm-8">
                    <input class=" form-control" asp-for="Price">
                    <span asp-validation-for="Price" class=" text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-8">
                  <img src="/Images/@ViewData["ImageFileName"]" width="150" />
                </div>
            </div>

            <div class="row mb-3">
                <lable class="col-sm-4 col-form-lable">Image</lable>
                <div class="col-sm-8">
                    <input class=" form-control" asp-for="ImageFile">
                    <span asp-validation-for="ImageFile" class=" text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <lable class="col-sm-4 col-form-lable">Created At</lable>
                <div class="col-sm-8">
                    <input class=" form-control-plaintext" readonly value="@ViewData["CreatedAt"]">
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary"> Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class=" btn btn-outlined-primary" asp-controller="AddMenus" asp-action="Index" role="button">
                        Cancle
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>
